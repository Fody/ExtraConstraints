<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Target
    AfterTargets="AfterBuild"
    Name="FodyExtraConstraintsVerification">

    <Delete Files="$(TargetDir)ExtraConstraints.dll" />

    <Error
      Condition="$(FodyExecutedWeavers) == '*Undefined*'"
      Text="Could not find `FodyWeaversExecuted` MSBuild property. It is possible you need to update Fody." />

    <Error
      Condition="!$(FodyExecutedWeavers.Contains('ExtraConstraints;'))"
      Text="ExtraConstraints expected to be executed. You may also need to manually add '&lt;ExtraConstraints /&gt;' into your FodyWeavers.xml. eg &lt;Weavers&gt;&lt;ExtraConstraints/&gt;&lt;/Weavers&gt;. See https://github.com/Fody/Fody/wiki/SampleUsage" />

  </Target>
</Project>